<%= form_for(['customer_center',@question, @question_answer.build]) do |f| %>
	<% unless user_signed_in? %>
	<div class="field">
		<%= f.label :name, '이름' %><br />
		<%= f.text_field :name,{:class=>'sl_input',:required=>'required'} %>
 	</div>
 	<div class="field">
 		<%= f.label :password,'비밀번호' %><br />
 		<%= f.password_field :password,{:class=>'sl_input',:required=>'required'} %>
 	</div>
 	<% end %>
 	<div class="field">
 		<%= f.label :content,'내용' %><br />
 		<%= f.text_area :content,{:class=>'sl_input',:required=>'required'} %>
 	</div>
 	<div class="actions">
 		<%= f.submit '댓글 쓰기' %>
 	</div>
<% end %>
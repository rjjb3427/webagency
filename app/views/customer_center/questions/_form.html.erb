<%= form_for ['customer_center',@question],:html=>{:class=>'slboard_form row-fluid'} do |f| %>
	<% if @question.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@question.errors.count, "error") %> prohibited this notice from being saved:</h2>
		<ul>
			<% @question.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<% unless user_signed_in? %>
	<div class="control-group">
		<%= f.label :name %>
		<div class="controls">
			<%= f.text_field :name,{:class=>'sl_input',:required=>'required'} %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :passsword %>
		<div class="controls">
			<%= f.password_field :password,{:class=>'sl_input',:required=>'required'} %>
		</div>
	</div>
	<% end %>
	<div class="control-group">
		<%= f.label :secret %>
		<div class="controls">		
			<%= f.check_box :secret,{:class=>'sl_input'} %>
		</div>
	</div>		
	<div class="control-group">
		<%= f.label :title %>
		<div class="controls">
			<%= f.text_field :title,{'class'=>'sl_input','required'=>'required'} %>
		</div>
	</div>
	<%= f.fields_for :question_content do |c| %>
	<div class="control-group">
		<%= c.label :content %>
		<div class="controls">		
			<%= c.text_area :content,{'id'=>'sl_content','class'=>'sl_input','required'=>'required'}  %>
		</div>
	</div>
	<% end %>
	<div class="control-group">
		<%=f.submit '제출' ,:class=>"btn btn-primary" %>
	</div>
<% end %>
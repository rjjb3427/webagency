<section id="guest_book_show">
	<%= render :partial => 'customer_center/top' %>
	<% if notice %>
	<div class="alert alert-success">
		<button class="close" data-dismiss="alert" type="button">×</button>
		<%= notice %>
	</div>
	<% end %>
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @guest_book.title %></h3>
			<p>작성자 :<%= @guest_book.name %>&nbsp;&nbsp;&nbsp; 작성일 : <%= @guest_book.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@guest_book.guest_book_content.content) %></div>
		</div>
	</div>
	<div id="sl_comment_list_layer">
		<%= render @guest_book_comments %>	
	</div>
	<div class="flickr_pagination"><%= paginate @guest_book_comments %></div>	
	<div id="sl_comment_form_layer">
		<%= render "customer_center/guest_book_comments/form" %>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list), customer_center_guest_books_path %>
		<% if @guest_book.user %>
			<% if current_user %>
				<% if @guest_book.user_id==current_user.id %>
					 &nbsp; | &nbsp; <%=link_to t(:link_edit), edit_customer_center_guest_book_path(@guest_book) %> &nbsp; | &nbsp;	
					<%= link_to '삭제', ['customer_center',@guest_book], method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
				<% end %>
			<% end %>
		<% else %>
			 &nbsp; | &nbsp; <%=link_to t(:link_edit), edit_customer_center_guest_book_path(@guest_book) %> &nbsp; | &nbsp;
			<%= link_to t(:link_delete), ['customer_center',@guest_book], method: :delete %>	
		<% end %>
	</div>
</section>
